{
    "version": 2,
    "buildCommand": "npm install && cd frontend && npm install && cd ../backend && npm install && cd .. && npm run build:all",
    "outputDirectory": "dist",
    "functions": {
        "api/**/*.js": {
            "runtime": "@vercel/node@3"
        }
    },
    "rewrites": [
        { "source": "/api/:path*", "destination": "/api/index.js" },
        { "source": "/(.*)", "destination": "/dist/index.html" }
    ]
}