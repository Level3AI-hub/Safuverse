{
  "name": "safuacademy",
  "version": "1.2.0",
  "description": "SafuAcademy - Web3 Course Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:all": "npm run build:frontend && npm run build:backend",
    "copy:dist": "xcopy /E /I /Y frontend\\dist dist",
    "prepare:cpanel": "npm run build:frontend && npm run copy:dist",
    "postinstall": "if [ -z \"$VERCEL\" ]; then cd backend && npx prisma generate; fi",
    "local:start": "hardhat node",
    "local:deploy": "hardhat run scripts/deploy.ts --network local",
    "deploy": "npx hardhat run scripts/deploy.s --network bsc",
    "build:action": "rollup -c",
    "build": "npm run build:frontend",
    "invoke": "bash ./scripts/invoke.sh",
    "test": "NODE_ENV=test hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/defender-sdk": "^2.6.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "builtin-modules": "^5.0.0",
    "hardhat": "^2.25.0",
    "prettier": "3.5.3",
    "prettier-plugin-solidity": "^2.0.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@prisma/client": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "ethers": "^6.16.0",
    "express": "^4.22.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "rollup": "^4.44.2",
    "serverless-http": "^4.0.0",
    "zod": "^3.25.76"
  }
}