// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LessonType {
  VIDEO
  READING
  QUIZ
}

enum TxStatus {
  PENDING
  SUCCESS
  FAILED
}

enum TxType {
  ENROLL
  PROGRESS_UPDATE
}

model User {
  id            String         @id @default(uuid())
  walletAddress String         @unique
  nonce         String
  points        Int            @default(0)
  isAdmin       Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  userCourses   UserCourse[]
  userLessons   UserLesson[]
  quizAttempts  QuizAttempt[]
  transactions  BlockchainTx[]

  @@index([walletAddress])
}

model Course {
  id               Int          @id
  title            String
  description      String
  longDescription  String?      @db.Text
  instructor       String?
  totalLessons     Int
  imageUrl         String?
  thumbnailUrl     String?
  category         String?
  level            String?
  duration         String?
  objectives       String[]     @default([])
  prerequisites    String[]     @default([])
  completionPoints Int          @default(50)
  requiredPoints   Int          @default(0)  // Points required to enroll (0 = free course)
  isActive         Boolean      @default(true)
  isPublished      Boolean      @default(false)
  onChainSynced    Boolean      @default(false)
  onChainTxHash    String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  lessons          Lesson[]
  userCourses      UserCourse[]

  @@index([isActive])
  @@index([isPublished])
}

model Lesson {
  id                 Int          @id @default(autoincrement())
  courseId           Int
  course             Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title              String
  description        String?
  order              Int
  type               LessonType
  contentUrl         String?
  videoStorageKey    String?      // S3/R2 key for private video storage
  videoDuration      Int          @default(0) // Duration in seconds
  estimatedMinutes   Int          @default(10)
  pointsValue        Int          @default(10)
  watchPoints        Int          @default(10) // Points for watching (50%+ threshold)
  minimumTimeSeconds Int          @default(60)
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  quiz               Quiz?
  userLessons        UserLesson[]

  @@unique([courseId, order])
  @@index([courseId])
}

model UserCourse {
  id                       String    @id @default(uuid())
  userId                   String
  user                     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId                 Int
  course                   Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  progress                 Int       @default(0)
  pointsEarned             Int       @default(0)
  pointsSpent              Int       @default(0) // Points deducted on enrollment
  onChainSynced            Boolean   @default(false) // For enrollment tx
  txHash                   String?
  completionPointsAwarded  Boolean   @default(false)
  onChainCompletionSynced  Boolean   @default(false) // For completion tx
  completionTxHash         String?
  enrolledAt               DateTime  @default(now())
  completedAt              DateTime?
  updatedAt                DateTime  @updatedAt

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([onChainSynced])
}

model UserLesson {
  id                  String    @id @default(uuid())
  userId              String
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lessonId            Int
  lesson              Lesson    @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  startedAt           DateTime?
  completedAt         DateTime?
  timeSpent           Int       @default(0)
  videoProgress       Int       @default(0)
  isWatched           Boolean   @default(false)  // true when 50%+ reached
  watchPointsAwarded  Boolean   @default(false)  // prevent double points for watching
  quizPointsAwarded   Boolean   @default(false)  // prevent double points for quiz
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

model Quiz {
  id           Int           @id @default(autoincrement())
  lessonId     Int           @unique
  lesson       Lesson        @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  questions    Json
  passingScore Int           @default(70)
  bonusPoints  Int           @default(20)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  attempts     QuizAttempt[]
}

model QuizAttempt {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  quizId    Int
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  score     Int
  passed    Boolean
  answers   Json
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([quizId])
}

model BlockchainTx {
  id        String   @id @default(uuid())
  txHash    String   @unique
  type      TxType
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId  Int
  status    TxStatus @default(PENDING)
  error     String?
  gasUsed   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([courseId])
  @@index([status])
}
